
%% Function A: backprojection filtering

% Input = phantom image

%function[] = partA_backprojection_filters(img)
f = phantom(256);
[R,x] = radon(f,linspace(0,177,60));
unfilt_bp = iradon(R,linspace(0,177,60),'none');
figure;
imshow(unfilt_bp,[]);
title('Unfiltered Backprojection');

% general parameters

out31 = myFilter12(3,1,R,x);
out21 = myFilter12(2,1,R,x);
out11 = myFilter12(1,1,R,x);

figure;
imagesc( out11 ); title('Manual filtering by Ram Lak, L=wmax')
colormap(gray(256)); axis image; axis off

figure;
imagesc( out21 ); title('Manual filtering by Shepp-Logan, L=wmax')
colormap(gray(256)); axis image; axis off

figure;
imagesc( out31 ); title('Manual filtering by Cosine Filter, L=wmax')
colormap(gray(256)); axis image; axis off

figure;
imagesc( out11-out31);colormap(gray(256)); axis image; axis off